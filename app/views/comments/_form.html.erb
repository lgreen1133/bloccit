<div class="row">
  <div class="col-md-8">
    <%= form_for [@topic, @post, @new_comment] do |f| -%>
      <%= form_group_tag(@new_comment.errors[:body]) do %>
        <%= f.label :body %>
        <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment body" %>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end -%>
  </div>
</div>