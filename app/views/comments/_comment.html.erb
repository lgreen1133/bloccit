<div class="media">
  <% @post.comments.each do |comment| %>
  <div class="media-left">
    <a href="#">
      <img class="media-object" src="comment.user.avatar.tiny.url"> <!-- Render the comments user's avatar here (similar to how we did it with posts) -->
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.user.name %></h4>
    <small>commented <%= time_ago_in_words(comment.created_at) %> ago by
       <%= comment.user.name %></small>
    <%= comment.body %>
  </div>
 <% end %>
</div>
