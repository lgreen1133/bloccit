<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <div class="media-left">
    <a href="#">
      <%= image_tag comment.user.avatar.tiny.url, class: 'media-object' %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.user.name %></h4>
    <small>commented <%= time_ago_in_words(comment.created_at) %> ago by
       <%= comment.user.name %>
       <% if policy(comment).destroy? %>
       | <%= link_to "Delete", [comment.post, comment], method: :delete %>
     <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
<% end %>